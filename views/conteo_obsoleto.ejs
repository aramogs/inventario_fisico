            <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder=""
              value="<%= ubicacion %>" readonly>

          </div>
          <div class=" col-lg-3 d-none d-sm-block">
            <label for=""> Captura No:</label>
